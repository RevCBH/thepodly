	function getShortUr(url, callback){
	   var accessToken = 'f601d9565a3a86214a25aeb47975962bbd8f579d';
	   var url = 'https://api-ssl.bitly.com/v3/shorten?access_token=' + accessToken + '&longUrl=' + 'https://mail.google.com/mail/';

	    $.getJSON(
	        url,
	        {},
